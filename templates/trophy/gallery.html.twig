{% extends 'base.html.twig' %}

{% block title %}
    Galerie des distinctions
{% endblock %}

{% block body %}
    <h1 class="text-center">Galerie des distinctions</h1>
    <hr>

    <div class="row">
        {% for trophy in trophies %}
            <div class="card col-12 col-md-6 col-lg-4">
                <div class="card-body">
                    <h5 class="card-title">
                        <i class="fas fa-trophy" style="color: goldenrod"></i>
                        {{ trophy.name }}
                    </h5>
                    <hr>
                    <h6 class="card-subtitle">
                        <i class="fas fa-futbol"></i>
                        {{ trophy.team }} - {{ trophy.tournament }}
                    </h6>

                    <p><i class="fas fa-clock"></i> Décerné le {{ trophy.givenAt|date('d/m/Y') }}</p>
                </div>
            </div>
        {% endfor %}
    </div>
{% endblock %}



