{% extends 'base.html.twig' %}

{% block body %}
    <h1 class="text-center">
        {{ tournament.name }}
        <a href="{{ path('tournament_edit', {'id': tournament.id }) }}" class="btn btn-warning"><i class="fas fa-edit"></i></a>
    </h1>
    <hr>

    <h2>Matchs</h2>

    {% if is_granted('ROLE_USER') %}
        <a href="{{ path('match_create', {'tournament': tournament.id}) }}" class="btn btn-outline-success">
            Créer un match
        </a>
    {% endif %}

    {% if matches is empty %}
        <div class="alert alert-info">Aucun match n'a encore été joué dans ce tournoi.</div>
    {% endif %}

    <table class="table table-hover">
        <thead>
        <tr>
            <th>Match</th>
            <th>Résultat</th>
            <th>Description</th>
            {% if is_granted('ROLE_USER') %}
            <th>Actions</th>
            {% endif %}
        </tr>
        </thead>
        <tbody>
        {% for match in matches %}
            <tr>
                <td>
                    <span class="{{ match.winner == match.hostingTeam ? (match.penalties ? 'text-warning fw-bold' : 'text-success fw-bold') : '' }}">{{ match.hostingTeam }}</span> -
                    <span class="{{ match.winner == match.receivingTeam  ? 'text-success fw-bold' : '' }}">{{ match.receivingTeam }}</span>

                </td>
                <td>{{ match.hostingTeamScore }} - {{ match.receivingTeamScore }}</td>
                <td>{{ match.description }}</td>
                {% if is_granted('ROLE_USER') %}
                <td>
                    <a href="{{ path('match_edit', {'id': match.id}) }}">Éditer</a>
                </td>
                {% endif %}
            </tr>
        {% endfor %}
        </tbody>
    </table>



{% endblock %}

{% block title %}
    {{ tournament.name }}
{% endblock %}

