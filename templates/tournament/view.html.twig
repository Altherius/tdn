{% extends 'base.html.twig' %}

{% block body %}
    <h1 class="text-center">
        {{ tournament.name }}
    </h1>
    <hr>

    <h2>Matchs</h2>

    <a href="{{ path('match_create', {'tournament': tournament.id}) }}" class="btn btn-outline-success">
        Créer un match
    </a>

    {% if matches is empty %}
        <div class="alert alert-info">Aucun match n'a encore été joué dans ce tournoi.</div>
    {% endif %}

    <table class="table table-hover">
        <thead>
        <tr>
            <th>Match</th>
            <th>Résultat</th>
            <th>Description</th>
            <th>Actions</th>
        </tr>
        </thead>
        <tbody>
        {% for match in matches %}
            <tr>
                <td>
                    <span class="{{ match.winner == match.hostingTeam  ? 'text-success fw-bold' : '' }}">{{ match.hostingTeam }}</span> -
                    <span class="{{ match.winner == match.receivingTeam  ? 'text-success fw-bold' : '' }}">{{ match.receivingTeam }}</span>

                </td>
                <td>{{ match.hostingTeamScore }} - {{ match.receivingTeamScore }}</td>
                <td>{{ match.description }}</td>
                <td>
                    <a href="{{ path('match_edit', {'id': match.id}) }}">Éditer</a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>



{% endblock %}

{% block title %}
    {{ tournament.name }}
{% endblock %}

