            <div class="col-12 col-md-6">
                <div class="card">
                    <div class="card-body">
                        <h4 class="text-center">
                            <a class="text-decoration-none text-black" href="{{ path('team_view', {'id': team1.id}) }}">
                                {{ team1.name }}
                            </a>
                        </h4>
                        <div class="text-center">
                            <div class="card">
                                <div class="card-body">
                                    <h5 class="fw-bold">
                                        {{ team1.rating }}
                                        {% if eloDiff < 0 %}
                                            <span class="text-danger">
                                            ({{ eloDiff }})
                                        </span>
                                        {% else %}
                                            <span class="text-success">
                                            (+{{ eloDiff }})
                                        </span>
                                        {% endif %}
                                        ({{ team1Position }}<sup>{{ team1Position == 1 ? 'er' : 'ème' }}</sup>)
                                    </h5>
                                    <p class="lead">
                                        Chances de victoire : {{ winProbability }}%
                                    </p>
