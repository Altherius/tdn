                                        <tr>
                                            <th>Résultat</th>
                                            <th>Modif elo</th>
                                            <th>Nouveau rang</th>
                                        </tr>
                                        </thead>
                                        <tbody>
                                        <tr>
                                            <td>Victoire (10+ buts)</td>
                                            <td>
                                                {% if eloDiffWin > 0 %}
                                                    <span class="text-success">+{{ (eloDiffWin * 2)|number_format }}</span>
                                                {% else %}
                                                    <span class="text-danger">{{ (eloDiffWin * 2)|number_format }}</span>
                                                {% endif %}
                                            </td>
                                            <td>
                                                {{ team1PositionWin10Goals }}<sup>{{ team1PositionWin10Goals == 1 ? 'er' : 'ème' }}</sup>
                                            </td>
                                        </tr>
                                        <tr>
                                            <td>Victoire (8+ buts)</td>
