{% extends 'base.html.twig' %}

{% block title %}
    Analyse de matchup
{% endblock %}


{% block body %}

    <h1 class="text-center">Analyse de matchup</h1>
    <hr>

    {{ form_start(form) }}

    <div class="row">
        <div class="col-12 col-md-6">
            {{ form_row(form.team1) }}
        </div>
        <div class="col-12 col-md-6">
            {{ form_row(form.team2) }}
        </div>
    </div>

    <div class="text-center">
        <button type="submit" class="btn btn-primary">Analyser</button>
    </div>

    {{ form_end(form) }}

    <hr>
    {% if team1 and team2 %}
