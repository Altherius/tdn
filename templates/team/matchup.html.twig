{% extends 'base.html.twig' %}

{% block title %}
    Analyse de matchup
{% endblock %}


{% block body %}

    <h1 class="text-center">Analyse de matchup</h1>
    <hr>

    {{ form_start(form) }}

    <div class="row">
        <div class="col-12 col-md-6">
            {{ form_row(form.team1) }}
        </div>
        <div class="col-12 col-md-6">
            {{ form_row(form.team2) }}
        </div>
    </div>

    <div class="text-center">
        <button type="submit" class="btn btn-primary">Analyser</button>
    </div>

    {{ form_end(form) }}

    <hr>
    {% if team1 and team2 %}
        <div class="row">
            <div class="col-12 col-md-6">
                <div class="card">
                    <div class="card-body">
                        <h4 class="text-center">{{ team1.name }}</h4>
                        <div class="text-center">
                            <div class="btn btn-light">
                                <h5 class="fw-bold">
                                    {{ team1.rating }}
                                    {% if eloDiff < 0 %}
                                        <span class="text-danger">
                                            ({{ eloDiff }})
                                        </span>
                                    {% else %}
                                        <span class="text-success">
                                            (+{{ eloDiff }})
                                        </span>
                                    {% endif %}
                                </h5>
                                <p class="lead">
                                    Chances de victoire : {{ winProbability }}%
                                </p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-12 col-md-6">
                <div class="card">
                    <div class="card-body">
                        <h4 class="text-center">{{ team2.name }}</h4>
                        <div class="text-center">
                            <div class="btn btn-light">
                                <h5 class="fw-bold">{{ team2.rating }}
                                    {% if eloDiff < 0 %}
                                        <span class="text-success">
                                            (+{{ -eloDiff }})
                                        </span>
                                    {% else %}
                                        <span class="text-danger">
                                            ({{ -eloDiff }})
                                        </span>
                                    {% endif %}
                                </h5>
                                <p class="lead">
                                    Chances de victoire : {{ 100 - winProbability }}%
                                </p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <h3 class="text-center">Statistiques</h3>

            <div class="row">
                <div class="col-12 col-md-6">
                    <h5 class="text-center">Résultat des confrontations</h5>
                    {{ render_chart(chart) }}
                </div>
                <div class="col-12 col-md-6">
                    <h5 class="text-center">Buts marqués</h5>
                    {{ render_chart(goalsChart) }}
                </div>
            </div>

            <hr class="mt-3">
            <h2 class="text-center">Historique des matches</h2>

            {% if matchesHistory is empty %}
                <div class="alert alert-info text-center">Ces équipes ne se sont jamais rencontrées</div>
            {% else %}
                <table class="table table-hover table-striped">
                    <thead>
                    <tr>
                        <th>Match</th>
                        <th>Tournoi</th>
                        <th>Résultat</th>
                        <th>Description</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for match in matchesHistory %}
                        <tr>
                            <td>{{ match.hostingTeam }} - {{ match.receivingTeam }}</td>
                            <td>{{ match.tournament }}</td>
                            <td>
                                {{ match.hostingTeamScore }} - {{ match.receivingTeamScore }}
                                {% if match.penaltiesWinner %}
                                    <small class="text-muted">
                                        ({{ match.penaltiesWinner }} tab)
                                    </small>
                                {% endif %}
                            </td>
                            <td>{{ match.description }}</td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            {% endif %}


        </div>
    {% endif %}
{% endblock %}


